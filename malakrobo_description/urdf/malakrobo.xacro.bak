<?xml version="1.0" ?>
<robot name="malakrobo" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find malakrobo_description)/urdf/materials.xacro" />
<xacro:include filename="$(find malakrobo_description)/urdf/malakrobo.gazebo" />
<link name="base_link">
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0.1"/>
    <geometry>
      <box size="0.1 0.1 0.1"/>
    </geometry>
    <material name="silver"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="0 0 0.1"/>
    <geometry>
      <box size="0.1 0.1 0.1"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.5"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
  </inertial>
</link>

<link name="left_wheel">
  <visual>
    <origin rpy="1.57079633 0 0" xyz="0 0 0"/>
    <geometry>
      <cylinder radius="0.1" length="0.05"/>
    </geometry>
    <material name="rubber"/>
  </visual>
  <collision>
    <origin rpy="1.57079633 0 0" xyz="0 0 0"/>
    <geometry>
      <cylinder radius="0.1" length="0.05"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.1"/>
    <origin rpy="1.57079633 0 0" xyz="0 0 0"/>
    <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
  </inertial>
</link>

<link name="right_wheel">
  <visual>
    <origin rpy="-1.57079633 0 0" xyz="0 0 0"/>
    <geometry>
      <cylinder radius="0.1" length="0.05"/>
    </geometry>
    <material name="rubber"/>
  </visual>
  <collision>
    <origin rpy="-1.57079633 0 0" xyz="0 0 0"/>
    <geometry>
      <cylinder radius="0.1" length="0.05"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.1"/>
    <origin rpy="-1.57079633 0 0" xyz="0 0 0"/>
    <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
  </inertial>
</link>

<joint name="base_to_left_wheel" type="continuous">
  <origin rpy="0 0 0" xyz="0 -0.075 0.1"/>
  <parent link="base_link"/>
  <child link="left_wheel"/>
  <axis xyz="0.0 1.0 0.0"/>
</joint>

<joint name="base_to_right_wheel" type="continuous">
  <origin rpy="0 0 0" xyz="0 0.075 0.1"/>
  <parent link="base_link"/>
  <child link="right_wheel"/>
  <axis xyz="0.0 1.0 0.0"/>
</joint>


<transmission name="tran1">
  <type>transmission_interface/SimpleTransmission</type>
  <joint name="base_to_left_wheel">
    <hardwareInterface>EffortJointInterface</hardwareInterface>
  </joint>
  <actuator name="left_wheel">
    <hardwareInterface>EffortJointInterface</hardwareInterface>
    <mechanicalReduction>1</mechanicalReduction>
  </actuator>
</transmission>

<transmission name="tran2">
  <type>transmission_interface/SimpleTransmission</type>
  <joint name="base_to_right_wheel">
    <hardwareInterface>EffortJointInterface</hardwareInterface>
  </joint>
  <actuator name="right_wheel">
    <hardwareInterface>EffortJointInterface</hardwareInterface>
    <mechanicalReduction>1</mechanicalReduction>
  </actuator>
</transmission>
</robot>
